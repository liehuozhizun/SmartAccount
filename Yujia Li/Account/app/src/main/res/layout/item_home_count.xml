<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_count_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_food"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />


    <LinearLayout
        android:id="@+id/ll_right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:id="@+id/tv_count_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+200"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_count_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/7/2018"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_count_type"
        android:layout_toLeftOf="@id/ll_right_content"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/tv_count_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_count_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some text"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        ></View>

</RelativeLayout>